%h2= t('devise.sessions.new.sign_in')
= simple_form_for(resource, url: session_path(resource_name)) do |f|
  = f.input :email
  = f.input :password
  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  = f.button :submit, t('devise.sessions.new.sign_in')

= link_to t('devise.registrations.new.sign_up'), new_user_registration_path
